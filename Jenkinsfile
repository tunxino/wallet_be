pipeline {
  agent any

  environment {
    NODE_ENV = "production"
    NVM_DIR = "/root/.nvm"
  }

  stages {
        stage('Checkout Code') {
          steps {
            echo "üìçUpdating code..."
            sh '''
              if [ -d .git ]; then
                echo "üîÑ Pulling latest changes..."
                git fetch origin main
                git reset --hard origin/main
              else
                echo "üì• Cloning repository for the first time..."
                git clone -b main https://github.com/tunxino/wallet_be.git .
              fi
            '''
          }
        }

        stage('Install Dependencies') {
          steps {
            echo "üì¶ Installing dependencies..."
            sh 'npm ci'
          }
        }

      stage('Build Project') {
            steps {
              echo '‚öôÔ∏èÔ∏è Building NestJS project...'
              sh '''
                npm run build
              '''
            }
          }


      stage('Deploy') {
        steps {
          echo "üöÄ Deploying"

          // L·∫•y m·∫≠t kh·∫©u t·ª´ Jenkins credentials
          withCredentials([string(credentialsId: 'ROOT_PASSWORD', variable: 'SUDO_PASS')]) {
            sh '''
              echo "Using PM2 from: $(which pm2)"

              # D√πng sudo c√≥ m·∫≠t kh·∫©u t·ª´ Jenkins credentials
              echo $SUDO_PASS | sudo -S mkdir -p /root/.pm2

              if pm2 describe wallet_be > /dev/null; then
                echo "‚ôªÔ∏è Reloading existing PM2 process..."
                echo $SUDO_PASS | sudo -S pm2 reload wallet_be
              else
                echo "üöÄ Starting new PM2 process..."
                echo $SUDO_PASS | sudo -S pm2 start dist/main.js --name wallet_be
              fi

              echo $SUDO_PASS | sudo -S pm2 save
            '''
          }
        }
      }




         }

  post {
    success {
      echo "‚úÖ Deployment successful!"
    }
    failure {
      echo "‚ùå Deployment failed!"
    }
  }
}
